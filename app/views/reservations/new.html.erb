<%= form_with(model: [@hotel,@reservation], local: true) do |form| %>

  <h1>ホテルの予約をする</h1>

  <div class="field">
    <%= form.label :name, '名前' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email, 'メールアドレス' %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :checkin, 'チェックイン' %>
    <%= form.date_select :checkin %>
  </div>

  <div class="field">
    <%= form.label :checkout, 'チェックアウト' %>
    <%= form.date_select :checkout %>
  </div>

  <div class="field">
    <%= form.label :number_of_people, '予約人数' %>
    <%= form.number_field :number_of_people, min:1, max:1000, step:1 %>
  </div>

  <%= form.hidden_field :hotel_id %><br>  

  <div class="actions">
    <%= form.submit '予約しちゃいなよ！' %>
  </div>
  
<% end %>