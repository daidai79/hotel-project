<h1>ホテルの一覧</h1>

<%= search_form_for @q do |f| %>
<%= f.label :ホテル名 %>
<%= f.search_field :name_cont %>
<%= f.submit '検索', class: "btn btn-info" %>

<%= f.label :都道府県名 %>
<%= f.search_field :prefecture_name_start %>
<%= f.submit '検索', class: "btn btn-info" %>
<% end %>

<% @hotels.each do |hotel| %>
  <p><%= hotel.name %></p>
  <p><%= hotel.description %></p>
  <%= image_tag(hotel.picture_url, width: 600) if hotel.picture.present? %>
  <p><%= link_to '詳細', hotel_path(hotel) %></p>
<% end %>

<div class="container">
　<div class="row">
　　<% @hotels.each do |hotel| %>
　　　<div class="col-md-3">
　　　　<div class="card">
　　　　　<img src="<%= hotel.picture_url %>" class="card-img-top" alt="...">
　　　　　<div class="card-body">
　　　　　　<h5 class="card-title"><%= hotel.name %></h5>
　　　　　　<p class="card-text"><%= hotel.description %></p>
　　　　　</div>
　　　　　<div class="card-footer">
　　　　　　<small class="text-muted"><%= link_to '詳細', hotel_path(hotel) %></small>
　　　　　</div>
　　　　</div>
　　　</div>
　　<% end %>
　</div>
</div>